@model COMP4911Timesheets.Models.Timesheet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Timesheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimesheetId" />
            <div class="form-group">
                <label asp-for="WeekEnding" class="control-label"></label>
                <input asp-for="WeekEnding" class="form-control" />
                <span asp-validation-for="WeekEnding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeekNumber" class="control-label"></label>
                <input asp-for="WeekNumber" class="form-control" />
                <span asp-validation-for="WeekNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ESignature" class="control-label"></label>
                <input asp-for="ESignature" class="form-control" />
                <span asp-validation-for="ESignature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlexTime" class="control-label"></label>
                <input asp-for="FlexTime" class="form-control" />
                <span asp-validation-for="FlexTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
                INVALID = 0
                NOT_SUBMITTED_NOT_APPROVED = 1
                SUBMITTED_NOT_APPROVED = 2
                SUBMITTED_APPROVED = 3
                REJECTED_NEED_RESUBMISSION = 4
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePayId" class="control-label"></label>
                <select asp-for="EmployeePayId" class="form-control" asp-items="ViewBag.EmployeePayId"></select>
                <span asp-validation-for="EmployeePayId" class="text-danger"></span>
            </div>
            @Html.ActionLink("Create New Row", "Create", "TimesheetRows", new { id = Model.TimesheetId }, null)
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            WorkPackageId
                        </th>
                        <th>
                            SatHour
                        </th>
                        <th>
                            SunHour
                        </th>
                        <th>
                            MonHour
                        </th>
                        <th>
                            TueHour
                        </th>
                        <th>
                            WedHour
                        </th>
                        <th>
                            ThuHour
                        </th>
                        <th>
                            FriHour
                        </th>
                        <th>
                            Notes
                        </th>

                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TimesheetRows != null)
                    {
                        foreach (var item in Model.TimesheetRows)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkPackageId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SatHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SunHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TueHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WedHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThuHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FriHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "TimesheetRows", new { id = item.TimesheetRowId }, null)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteRow", "Timesheets", new { id = item.TimesheetRowId }, null)
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>





<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
